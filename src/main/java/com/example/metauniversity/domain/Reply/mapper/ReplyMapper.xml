<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.example.metauniversity.domain.Reply.mapper.ReplyMapper">

	<sql id="reply">
		  replyId
		, createDate
		, updateDate
		, delete_yn
		, replyContent
		, boardId
		, userId
	</sql>
<!-- 댓글 등록 -->
	<insert id="insertReply" parameterType="com.example.metauniversity.domain.Reply.dto.replyDto$insertReply">
		INSERT INTO reply (
			<include refid="reply" />
		) VALUES (
			  #{replyId}
			, #{createDate}
			, #{updateDate}
			, IFNULL(#{deleteYn}, 'N')
			, #{replyContent}
			, #{boardId}
			, #{userId}
		)
	</insert>

	<select id="selectReplyDetail" parameterType="long" resultType="com.example.metauniversity.domain.Reply.dto.replyDto$insertReply">
		SELECT
			<include refid="reply" />
		FROM
			reply
		WHERE
			delete_yn = 'N'
		AND
			replyId = #{replyId}
	</select>

<!-- 댓글 수정 -->
	<update id="updateReply" parameterType="com.example.metauniversity.domain.Reply.dto.replyDto$insertReply">
		UPDATE reply
		SET
			content = #{replyContent}
		WHERE
			replyId = #{replyId}
	</update>

<!-- 댓글 삭제 -->
	<update id="deleteComment" parameterType="long">
		UPDATE reply
		SET
			  delete_yn = 'Y'
		WHERE
			replyId = #{replyId}
	</update>
	
	<select id="selectReplyList" parameterType="com.example.metauniversity.domain.Reply.dto.replyDto$insertReply" resultType="com.example.metauniversity.domain.Reply.dto.replyDto$insertReply">
		SELECT
			<include refid="reply" />
		FROM
			reply
		WHERE
			delete_yn = 'N'
		AND
			boardId = #{boardId}
		ORDER BY
			replyId DESC
	</select>
	
		<select id="selectReplyTotalCount" parameterType="com.example.metauniversity.domain.Reply.dto.replyDto$insertReply" resultType="int">
		SELECT
			COUNT(*)
		FROM
			reply
		WHERE
			delete_yn = 'N'
		 AND
			boardId = #{boardId} 
	</select>
	
	
</mapper>